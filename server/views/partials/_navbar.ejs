<div class="navbar navbar-default navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">FCC Project - Voting App</a>
    </div>

    <ul class="nav navbar-nav navbar-right">

      <% if (currentUser) { %>
      <li>
        <a id="greet" href="/">
          Logged in as @<%= currentUser.username %>
        </a>
      </li>
      <li>
        <a href="/users/<%= currentUser._id %>">
          My polls
        </a>
      </li>
      <li>
        <a href="/logout">Log out</a>
      </li>
      <% } else { %>
      <li class="login" id="login">
        <a href="/auth/github">Log in with GitHub <i class="fa fa-github" aria-hidden="true"></i></a>
      </li>
      <% } %>
    </ul>
  </div>
</div>
